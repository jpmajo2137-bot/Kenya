<?xml version="1.0" encoding="utf-8"?>
<!--
  K-Kiswahili-Words Network Security Configuration
  Maximum Security: HTTPS Only
-->
<network-security-config>
    <!-- 기본 설정: HTTPS만 허용 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- 시스템 CA 인증서만 신뢰 -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- 허용된 도메인 (Supabase, Google, Firebase) -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Supabase -->
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">supabase.com</domain>
        
        <!-- Google Services -->
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">google.com</domain>
        <domain includeSubdomains="true">gstatic.com</domain>
        <domain includeSubdomains="true">googleadservices.com</domain>
        <domain includeSubdomains="true">doubleclick.net</domain>
        
        <!-- Firebase -->
        <domain includeSubdomains="true">firebaseio.com</domain>
        <domain includeSubdomains="true">firebase.google.com</domain>
        <domain includeSubdomains="true">firebaseinstallations.googleapis.com</domain>
        
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- 디버그 빌드에서도 HTTPS 강제 (개발 중에도 보안 유지) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
