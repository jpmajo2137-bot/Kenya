<?xml version="1.0" encoding="utf-8"?>
<!--
  K-Kiswahili-Words Network Security Configuration
-->
<network-security-config>
    <!-- 기본 설정: HTTPS 권장 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Capacitor 로컬 서버 허용 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>

    <!-- 허용된 HTTPS 도메인 -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Supabase -->
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">supabase.com</domain>
        
        <!-- Google Services -->
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">google.com</domain>
        <domain includeSubdomains="true">gstatic.com</domain>
        <domain includeSubdomains="true">googleadservices.com</domain>
        <domain includeSubdomains="true">doubleclick.net</domain>
        <domain includeSubdomains="true">googlesyndication.com</domain>
        
        <!-- Firebase -->
        <domain includeSubdomains="true">firebaseio.com</domain>
        <domain includeSubdomains="true">firebase.google.com</domain>
        <domain includeSubdomains="true">firebaseinstallations.googleapis.com</domain>
        
        <!-- IP API (언어 감지용) -->
        <domain includeSubdomains="true">ip-api.com</domain>
        <domain includeSubdomains="true">ipapi.co</domain>
        
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
